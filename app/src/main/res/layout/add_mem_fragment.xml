<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/addmemberAutoCompleteTextView_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:elevation="10dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true">

        <AutoCompleteTextView
            android:id="@+id/addmemberAutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="Search User Name or Email" />

    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/add_mem_frag_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addmemberAutoCompleteTextView_cardview"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:divider="#00ffffff"
        android:dividerHeight="0dp" />

</RelativeLayout>