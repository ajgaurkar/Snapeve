<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_contri_list_item_user_pic_img_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/my_pic" />

            <TextView
                android:id="@+id/user_contri_list_item_user_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/user_contri_list_item_user_pic_img_view"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-2dp"
                android:layout_toEndOf="@+id/user_contri_list_item_user_pic_img_view"
                android:layout_toStartOf="@+id/user_contri_list_item_user_time_text_view"
                android:maxLines="1"
                android:minLines="1"
                android:padding="2dp"
                android:text="Jhony Ive "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_contri_list_item_description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_contri_list_item_user_name_text_view"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-2dp"
                android:layout_toEndOf="@+id/user_contri_list_item_user_pic_img_view"
                android:layout_toStartOf="@+id/user_contri_list_item_user_time_text_view"
                android:minLines="1"
                android:paddingBottom="2dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="Sahfcdahad dgiyiiu asgiucsaisuh gsiacasiusuchiu   saicgasicasiuciuas " />

            <TextView
                android:id="@+id/user_contri_list_item_user_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingStart="2dp"
                android:singleLine="true"
                android:text="21 hrs ago"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_contri_list_item_like_status_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/user_contri_list_item_description_text_view"
                android:layout_below="@+id/user_contri_list_item_description_text_view"
                android:padding="2dp"
                android:text="12 Likes  24 Comments  3 Spam"
                android:textSize="11sp"
                android:textStyle="bold">


            </TextView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
