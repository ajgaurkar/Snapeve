<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/create_group_dialog_profile_pic_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:src="@drawable/avatar_100_3" />

    <android.support.v7.widget.CardView
        android:id="@+id/create_group_dialog_grp_name_edittext_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_group_dialog_profile_pic_image_view"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:elevation="10dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardUseCompatPadding="true">

        <EditText
            android:id="@+id/create_group_dialog_grp_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="center"
            android:hint="Add group name"
            android:padding="10dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/create_group_dialog_create_btn_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_group_dialog_grp_name_edittext_card"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:elevation="10dp"
        card_view:cardBackgroundColor="@color/colorPrimaryDark"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/create_group_dialog_create_btn_card_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:ems="10"
            android:gravity="center"
            android:padding="10dp"
            android:text="CREATE GROUP"
            android:textColor="#fff"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

</RelativeLayout>