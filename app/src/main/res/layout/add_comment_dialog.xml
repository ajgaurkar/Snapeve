<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:orientation="horizontal"-->
    <!--android:weightSum="30"-->
    <!--android:layout_height="wrap_content">-->

    <RelativeLayout
        android:id="@+id/add_comment_rel_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/add_comment_dialog_clear_textview"
        android:background="@drawable/grey_bg_five_corner_round"
        android:padding="5dp">

        <TextView
            android:id="@+id/at_the_rate_lable_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/at_the_rate_string"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/add_comment_dialog_user_name_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/at_the_rate_lable_textview"
            android:layout_alignTop="@+id/at_the_rate_lable_textview"
            android:layout_marginEnd="-10dp"
            android:layout_marginStart="-10dp"
            android:layout_toEndOf="@+id/at_the_rate_lable_textview" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/add_comment_rel_layout_1"
        android:layout_below="@+id/add_comment_rel_layout_1"
        android:padding="2dp"
        android:text="Comment for (Optional)"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/add_comment_dialog_clear_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_comment_rel_layout_1"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/add_comment_rel_layout_1"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="CLEAR"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_comment_dialog_comment_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_comment_rel_layout_1"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/grey_bg_five_corner_round"
        android:gravity="start"
        android:hint="Add comment"
        android:maxLines="8"
        android:minHeight="80dp"
        android:padding="5dp" />

    <!--</LinearLayout>-->
</RelativeLayout>