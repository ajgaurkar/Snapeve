<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/similar_post_list_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_event_card_3"
        android:layout_margin="8dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/similar_post_list_item_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:padding="2dp"
                android:text="This is an event hope u like it"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/similar_post_list_item_dt_time_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/similar_post_list_item_title_textview"
                android:padding="2dp"
                android:singleLine="true"
                android:text="May 25,  2018 10:00 AM - 11:00 AM"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/similar_post_list_item_likes_count_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/similar_post_list_item_dt_time_textview"
                android:padding="2dp"
                android:text="15 Likes    20 Comments    3 Spam"
                android:textColor="#000"
                android:textSize="10sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/similar_post_list_item_vertical_separator"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/similar_post_list_item_likes_count_textview"
                android:layout_marginTop="2dp"
                android:background="@color/colorAccent" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/similar_post_list_item_user_pic_img_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/similar_post_list_item_vertical_separator"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/my_pic" />

            <TextView
                android:id="@+id/similar_post_list_item_user_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/similar_post_list_item_user_pic_img_view"
                android:layout_toEndOf="@+id/similar_post_list_item_user_pic_img_view"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:text="Jhony Ive"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/similar_post_list_item_user_pic_img_view"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/similar_post_list_item_user_pic_img_view"
                android:layout_marginEnd="5dp"
                android:src="@drawable/info_32_grey" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>