<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/umbc_bg_4"
        android:scaleType="fitCenter" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_gradient_bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/signup_page_page_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Signup"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/signup_page_f_name_rel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_page_page_name_textview"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="30dp"
                android:visibility="gone"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_text_bg_round_corner_transp"
                android:paddingBottom="3dp"
                android:paddingEnd="10dp"
                android:paddingTop="3dp">

                <View
                    android:id="@+id/signup_name_horizontal_divider_1"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/signup_page_f_name_edittext"
                    android:layout_alignTop="@+id/signup_page_f_name_edittext"
                    android:layout_centerHorizontal="true" />

                <View
                    android:id="@+id/signup_name_horizontal_divider"
                    android:layout_width="0.4dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/signup_page_f_name_edittext"
                    android:layout_alignTop="@+id/signup_page_f_name_edittext"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/signup_name_horizontal_divider_1"
                    android:background="#fff" />

                <ImageView
                    android:id="@+id/first_name_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:src="@drawable/name_48" />

                <EditText
                    android:id="@+id/signup_page_f_name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/first_name_icon"
                    android:layout_alignTop="@+id/first_name_icon"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="50dp"
                    android:layout_toStartOf="@+id/signup_name_horizontal_divider"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="First name"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

                <EditText
                    android:id="@+id/signup_page_l_name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/first_name_icon"
                    android:layout_alignTop="@+id/first_name_icon"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/signup_name_horizontal_divider"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="Last name"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/signup_page_l_name_rel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_page_f_name_rel_layout"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/login_text_bg_round_corner_transp"
                android:paddingBottom="3dp"
                android:paddingEnd="10dp"
                android:paddingTop="3dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/last_name_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:src="@drawable/name_48" />

                <!--<EditText-->
                <!--android:id="@+id/signup_page_l_name_edittext"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignBottom="@+id/last_name_icon"-->
                <!--android:layout_alignTop="@+id/last_name_icon"-->
                <!--android:layout_marginEnd="30dp"-->
                <!--android:layout_marginStart="50dp"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:gravity="center_vertical"-->
                <!--android:hint="Last name"-->
                <!--android:inputType="textEmailAddress"-->
                <!--android:padding="5dp"-->
                <!--android:textColor="#fff"-->
                <!--android:textColorHint="#fff" />-->
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/signup_page_email_rel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_page_l_name_rel_layout"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/login_text_bg_round_corner_transp"
                android:paddingBottom="3dp"
                android:paddingEnd="10dp"
                android:visibility="gone"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:src="@drawable/email_white_48" />

                <EditText
                    android:id="@+id/signup_page_email_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/email_icon"
                    android:layout_alignTop="@+id/email_icon"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="50dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Email"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/signup_page_user_name_rel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_page_email_rel_layout"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_text_bg_round_corner_transp"
                android:paddingBottom="3dp"
                android:paddingEnd="10dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/user_name_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:src="@drawable/user_name_48" />

                <EditText
                    android:id="@+id/signup_user_name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/user_name_icon"
                    android:layout_alignTop="@+id/user_name_icon"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="50dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Choose a user name"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/signup_page_pass_rel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/signup_page_user_name_rel_layout"
                android:layout_alignStart="@+id/signup_page_user_name_rel_layout"
                android:layout_below="@+id/signup_page_user_name_rel_layout"
                android:layout_marginBottom="15dp"
                android:background="@drawable/login_text_bg_round_corner_transp"
                android:paddingBottom="3dp"
                android:paddingEnd="10dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/pass_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:src="@drawable/password_48" />

                <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                    android:id="@+id/signup_page_pass_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/pass_icon"
                    android:layout_alignTop="@+id/pass_icon"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="50dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Password"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/signup_page_confirm_pass_rel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/signup_page_pass_rel_layout"
                android:layout_alignStart="@+id/signup_page_pass_rel_layout"
                android:layout_below="@+id/signup_page_pass_rel_layout"
                android:layout_marginBottom="15dp"
                android:background="@drawable/login_text_bg_round_corner_transp"
                android:paddingBottom="3dp"
                android:paddingEnd="10dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/confirm_pass_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:src="@drawable/lock_2_white_48" />

                <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                    android:id="@+id/signup_page_confirm_pass_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/confirm_pass_icon"
                    android:layout_alignTop="@+id/confirm_pass_icon"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="50dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/signup_page_security_question_rel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/signup_page_confirm_pass_rel_layout"
                android:layout_alignStart="@+id/signup_page_confirm_pass_rel_layout"
                android:layout_below="@+id/signup_page_confirm_pass_rel_layout"
                android:layout_marginBottom="15dp"
                android:background="@drawable/login_text_bg_round_corner_transp"
                android:paddingBottom="3dp"
                android:paddingEnd="10dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/security_question_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:src="@drawable/security_question48" />

                <Spinner
                    android:id="@+id/signup_page_security_question_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/security_question_icon"
                    android:layout_alignTop="@+id/security_question_icon"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="50dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Confirm Password"
                    android:padding="5dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

                <ImageView
                    android:id="@+id/security_question_spinner_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:padding="8dp"
                    android:src="@drawable/drop_down_24" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/signup_page_security_answer_rel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/signup_page_pass_rel_layout"
                android:layout_alignStart="@+id/signup_page_pass_rel_layout"
                android:layout_below="@+id/signup_page_security_question_rel_layout"
                android:layout_marginBottom="15dp"
                android:background="@drawable/login_text_bg_round_corner_transp"
                android:paddingBottom="3dp"
                android:paddingEnd="10dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/security_answer_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:src="@drawable/security_answer48" />

                <EditText
                    android:id="@+id/signup_page_security_answer_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/security_answer_icon"
                    android:layout_alignTop="@+id/security_answer_icon"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="50dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Answer"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/signup_page_referal_code_rel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/signup_page_pass_rel_layout"
                android:layout_alignStart="@+id/signup_page_pass_rel_layout"
                android:layout_below="@+id/signup_page_security_answer_rel_layout"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_text_bg_round_corner_transp"
                android:paddingBottom="3dp"
                android:paddingEnd="10dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/referal_code_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:src="@drawable/referal_code_48" />

                <EditText
                    android:id="@+id/signup_page_referral_code_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/referal_code_icon"
                    android:layout_alignTop="@+id/referal_code_icon"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="50dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Referral Code (Optional)"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/signup_page_signup_btn_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/signup_page_security_question_rel_layout"
                android:layout_alignStart="@+id/signup_page_security_question_rel_layout"
                android:layout_below="@+id/signup_page_referal_code_rel_layout"
                android:background="?android:selectableItemBackground"
                card_view:cardBackgroundColor="@color/colorPrimaryDark"
                card_view:cardCornerRadius="20dp"
                android:layout_marginBottom="20dp"
                card_view:cardElevation="5dp">

                <TextView
                    android:id="@+id/signup_page_signup_btn_card_textview"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center"
                    android:text="SIGNUP"
                    android:textColor="#fff"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>