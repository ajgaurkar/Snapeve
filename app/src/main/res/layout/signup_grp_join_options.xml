<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/show_pending_req_dialog_btn_lin_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/signup_grp_join_dialog_header_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:text="Choose an option"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/signup_grp_join_grp_info_btn_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_grp_join_dialog_header_textview"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:elevation="10dp"
        card_view:cardBackgroundColor="#e0e0e0"
        android:gravity="center_horizontal"
        card_view:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/signup_grp_join_grp_info_btn_card_view_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/event_detail_user_post_dt_time_text_view"
            android:layout_alignTop="@+id/event_detail_user_comment_text_view"
            android:layout_margin="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="GROUP INFORMATION"
            android:textSize="12sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/signup_grp_join_send_req_btn_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_grp_join_grp_info_btn_card_view"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        android:layout_marginBottom="20dp"
        card_view:cardBackgroundColor="#e0e0e0"
        android:gravity="center_vertical"
        card_view:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/signup_grp_join_send_req_btn_card_view_btn_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/event_detail_user_post_dt_time_text_view"
            android:layout_alignTop="@+id/event_detail_user_comment_text_view"
            android:layout_margin="15dp"
            android:gravity="center"
            android:textColor="#399cff"
            android:singleLine="true"
            android:text="SEND JOINING REQUEST"
            android:textSize="12sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>
</RelativeLayout>