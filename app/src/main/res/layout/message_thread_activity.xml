<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/message_thread_main_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/message_thread_footer_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:divider="#00ffffff"
        android:dividerHeight="0dp">

    </ListView>

    <RelativeLayout
        android:id="@+id/message_thread_footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/__picker_common_primary"
        android:padding="5dp">

        <EditText
            android:id="@+id/message_thread_footer_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_toStartOf="@+id/message_thread_footer_send_msg_btn_textview"
            android:background="@drawable/grey_bg_five_corner_round"
            android:hint="Type Something"
            android:maxLines="5"
            android:padding="7dp" />

        <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/message_thread_footer_send_msg_fab"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_marginEnd="10dp"-->
        <!--android:layout_marginStart="10dp" />-->

        <TextView
            android:id="@+id/message_thread_footer_send_msg_btn_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:padding="7dp"
            android:text="SEND"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>